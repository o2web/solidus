<%= render :partial => 'spree/admin/shared/order_tabs', :locals => { :current => 'Creditcards' } %>

<% content_for :page_title do %>
  <i class="fa fa-arrow-right"></i> <%= Spree::Refund.model_name.human %>
<% end %>

<%= form_tag do %>
  <h3><%= Spree::Refund.model_name.human %></h3>
  <fieldset data-hook="credit">
    <p>
      <%= label_tag :amount, Spree::Payment.human_attribute_name(:amount) %>
      <%= text_field_tag :amount, @payment.amount %>
    </p>
    <p class="form-buttons">
      <%= button Spree.t(:make_refund) %>
    </p>
  </fieldset>
<% end %>
